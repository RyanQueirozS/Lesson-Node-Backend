{
  "compilerOptions": {
    "lib": [ "es2019", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,       // Add this line
    "allowSyntheticDefaultImports": true // Optional but often useful with esModuleInterop
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}

