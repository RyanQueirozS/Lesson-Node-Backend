{
  "compilerOptions": {
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,

    "noEmitOnError": true, // Breaks compilation if there is an error in a ts file
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "baseUrl": ".",
    "paths": {
      "@tests/*": ["__tests__/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "__tests__/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  }
}
